# ===========================================
# TRADING BOT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file to version control

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=TradingBot
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# ALPACA API CREDENTIALS
# ===========================================
# Get your API keys from: https://app.alpaca.markets/
# For paper trading use: https://paper-api.alpaca.markets
# For live trading use: https://api.alpaca.markets

ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://trading:trading123@localhost:5432/trading_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_db
DB_USER=trading
DB_PASSWORD=trading123

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# TRADING PARAMETERS
# ===========================================
# Risk Management
MAX_POSITION_SIZE=10000
RISK_PER_TRADE=100
MAX_DAILY_LOSS=500
MAX_POSITIONS=5
MAX_POSITION_PERCENT=20

# Trading Hours (24-hour format)
TRADING_START_HOUR=9
TRADING_START_MINUTE=30
TRADING_END_HOUR=16
TRADING_END_MINUTE=0

# ===========================================
# STRATEGY SETTINGS
# ===========================================
# Gap Trading
MIN_GAP_PERCENT=0.75
MAX_GAP_PERCENT=8.0

# Ichimoku Settings
ICHIMOKU_TENKAN=9
ICHIMOKU_KIJUN=26
ICHIMOKU_SENKOU_B=52

# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65

# ATR Settings
ATR_PERIOD=14
ATR_STOP_MULTIPLIER=2.0

# ===========================================
# ML SETTINGS (Optional)
# ===========================================
USE_ML_SCORING=true
ML_MINIMUM_SCORE=0.40
ML_MODEL_PATH=ml_entry_scorer.pkl

# ===========================================
# BACKTESTING SETTINGS
# ===========================================
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.0
BACKTEST_SLIPPAGE=0.0

# ===========================================
# MONITORING & ALERTS
# ===========================================
# Email Settings (Optional - for trade alerts)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=

# Telegram Bot (Optional - for trade alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===========================================
# ADVANCED SETTINGS
# ===========================================
# Session Management
SESSION_TIMEOUT=3600
MAX_RETRIES=3
RETRY_DELAY=5

# Data Refresh Intervals (seconds)
MARKET_DATA_REFRESH=60
POSITION_REFRESH=10
WATCHLIST_REFRESH=300

# Logging
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading_bot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===========================================
# NOTES
# ===========================================
# 1. Always start with paper trading (ALPACA_BASE_URL=https://paper-api.alpaca.markets)
# 2. Test your strategies thoroughly before going live
# 3. Never risk more than you can afford to lose
# 4. Monitor your bot regularly
# 5. Keep your API keys secure
